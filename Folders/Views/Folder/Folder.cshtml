@model Folder[]


<h2>./@ViewData["Folder"]/</h2>
@if (Model.Any())
{
    <div class="list-group">
        @foreach (var item in Model)
        {
            <a class="list-group-item list-group-item-action" 
            asp-controller="Folder" 
            asp-action="Folder"
            asp-route-id="@item.FolderId">
                @item.Name
            </a>
        }
    </div>
}
else{
    <h4>Empty folder</h4>
}